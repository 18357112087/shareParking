.assess-pages {
  padding: 10rpx 0;
  background-color: rgb(250, 250, 250);
  min-height: 100vh;
  box-sizing: border-box;
}

.selected{
  background-color: #fff;
  color: rgb(247, 181, 120);
}

.wrapper-item {
  height: 166rpx;
  width: 100%;
  border-radius: 8rpx;
  padding: 20rpx 35rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.title-img {
  display: inline-block;
}

.title-img image {
  height: 136rpx;
  width: 136rpx;
  border-radius: 50%;
}

.main-info {
  display: inline-block;
  width: 68vw;
  margin-left: 20rpx;
}

.info-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name-desc {
  text-align: left;
  margin-bottom: 10rpx;
}

.info-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
}

.info-desc {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 30rpx;
}

.reser-time {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.info-bottom {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
  margin-top: 10rpx;
}

.info-hospital {
  margin-right: 30rpx;
}

.info-bottom .icon {
  display: inline-block;
  height: 13rpx;
  width: 13rpx;
  border-radius: 50%;
  margin-right: 4rpx;
  margin-bottom: 5rpx;
}

.icon-hospital {
  background-color: rgb(159, 231, 80);
}

.icon-team {
  background-color: rgba(123, 201, 219, 0.356);
}

.assess-body {
  background-color: #fff;
  padding: 25rpx 0;
  margin-top: 20rpx;
}

.assess-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  text-align: center;
}

.assess-star {
  margin-top: 20rpx;
}

.star-wrap {
  width: 50vw;
  margin: 10rpx auto 10rpx auto;
}

.star-item {
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
  margin-right: 10rpx;
}

.star-desc {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(243, 162, 0, 1);
  text-align: center;
}

.assess-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 75vw;
  margin: 5rpx auto 30rpx auto;
}

.item-assess {
  height: 50rpx;
  line-height: 50rpx;
  width: 32vw;
  border: 1px solid #eee;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  margin-top: 25rpx;
  border-radius: 5rpx;
}

textarea {
  width: 75vw;
  margin: 0 auto;
  border: 1px solid #eee;
  border-radius: 5rpx;
  padding: 15rpx;
  height: 200rpx;
}

.place-assess {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.assess-submint {
  margin: 20rpx auto 0 auto;
  width: 90vw;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: rgb(102, 193, 140);
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
}



/* pages/wallet/index.wxss */
.choose{
	background-color: #fff;
}
.choose-grids{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	padding: 50rpx;
}
.choose-grids .grid{
	width: 45%;
	height: 100rpx;
	margin-top: 36rpx;
	border-radius: 6rpx;
	line-height: 100rpx;
	text-align: center;
	border: 2rpx solid #b9dd08;
}
.choose-grids .grid:first-child,
.choose-grids .grid:nth-of-type(2){
	margin-top: 0;
}
.action .action-photo{
	background-color: #fff;
	padding: 40rpx 0px 40rpx 50rpx;
}
.action .action-photo image{
	position: relative;
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	overflow: visible;
	margin-left: 25rpx;
}
.action .action-photo image icon.del{
	display: block;
	position: absolute;
	top: -20rpx;
	right: -20rpx;
}
.action .action-photo text.add{
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	font-size: 24rpx;
	color: #ccc;
	border: 2rpx dotted #ccc;
	margin-left: 25rpx;
	vertical-align: top;
}
.action .action-input{
	padding-left: 50rpx;
	margin-top: 30rpx;
	background-color: #fff;
}
.action .action-input input{
	width: 90%;
	padding-top: 40rpx;
	padding-bottom: 40rpx;
}
.action .action-input input:first-child{
	border-bottom: 2rpx solid #ccc;
	padding-bottom: 20rpx;
}
.action .action-input input:last-child{
	padding-top: 20rpx;
}
.action .action-submit{
	margin: 20rpx auto 0 auto;
  width: 90vw;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: rgb(102, 193, 140);
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  border-radius: 20rpx;

}

